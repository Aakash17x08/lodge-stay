<% layout("/layouts/boilerplate") -%>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your Listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Add a catchy title</label>
          <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required />
          <div class="invalid-feedback">Enter your Title.</div>
          <br /><br />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
        <%= listing.description %>  </textarea>
          <div class="invalid-feedback">Enter your description.</div>

          <br /><br />
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Current Image</label>
          <img
            src="<%= listing.image && listing.image.url ? listing.image.url : 'https://imgs.search.brave.com/ucsT33psqlx0U1GkRYDOf6sKr936SSX-XLi2ks17tv8/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9tZWRp/YS5pc3RvY2twaG90/by5jb20vaWQvNDc5/NzY3MzMyL3Bob3Rv/L2lkeWxsaWMtaG9t/ZS13aXRoLWNvdmVy/ZWQtcG9yY2guanBn/P3M9NjEyeDYxMiZ3/PTAmaz0yMCZjPW5v/RmU4Yk5Jc25Bb0dO/SlhNZXBTVlZyTkdo/RWlvcjJZMHdaY1JP/Qjk0VXc9' %>"
            class="card-img-top" alt="Listing Image" style="height: 20rem;">
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input name="listing[image]" type="file" class="form-control" />
          <br /><br />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required />
            <div class="invalid-feedback">Price should be valid.</div>
            <br /><br />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required />
            <div class="invalid-feedback">Country should be valid.</div>
            <br /><br />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required />
          <div class="invalid-feedback">Location should be valid.</div>
          <br /><br />
        </div>


        <button class=" btn btn-dark edit-btn mb-3"
          style="background-color:#fe424d; border: none !important;">Done</button>
      </form>
    </div>
  </div>

  <script src="/js/script.js"></script>